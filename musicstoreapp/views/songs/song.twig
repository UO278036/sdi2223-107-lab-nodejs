{% extends "layout.twig" %}

{% block title %} Detalles de canción {% endblock %}

{% block main_container %}
    <div class="row">
        <div class="medial col-xs-10">
            <div class="media-left media-middle">
                <img class="media-object" src="/covers/{{ song._id }}.png">
            </div>
            <div class="media-body">
                <h2>{{ song.title }}</h2>
                <p>{{ song.author }}</p>
                <p>{{ song.kind }}</p>
                {% if canBuy %}
                    <a class="btn btn-primary pull-right"
                       href="/songs/buy/{{ song._id }}">{{ song.price }} €</a>
                {% else %}
                    <audio controls>
                        <source src="/audios/{{ song._id }}.mp3" type="audio/mpeg">
                    </audio>
                {% endif %}
            </div>
        </div>
    </div>


    <h2>Comentarios</h2>
    {% for comment in comments %}
        <div >
            <h5>{{ comment.author }}</h5>
            <h4>{{comment.text}}</h4>
        </div>
    {% endfor %}

    <h2>Añadir comentario</h2>
    <form class="form-horizontal" method="post" action="/comments/{{ song._id }}">
        <label class="control-label col-sm-2" for="texto">Comentario:</label>
        <div class="col-sm-10">
            <input id="texto" type="text" class="form-control" name="texto"
                   placeholder="Escribe aquí tu comentario" required="true" />
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
        </div>
    </form>

{% endblock %}